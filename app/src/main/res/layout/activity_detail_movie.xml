<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp">

        <ImageView
            android:id="@+id/iv_mvPoster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/slide" />

        <TextView
            android:id="@+id/tv_mvTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_mvPoster"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>
<!--            android:text="Fast X"/>-->

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_below="@+id/iv_mvPoster"
            android:layout_toRightOf="@+id/tv_mvTitle"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_voteAvg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_star"
            android:layout_below="@id/iv_mvPoster"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"/>
<!--            android:text="4.8"/>-->

        <TextView
            android:id="@+id/tv_mvLanguage"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mvTitle"
            android:textColor="@color/grey"
            android:textSize="15sp"/>
<!--            android:text="en"/>-->

        <TextView
            android:id="@+id/tv_strip"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mvTitle"
            android:layout_toRightOf="@id/tv_mvLanguage"
            android:textColor="@color/grey"
            android:gravity="center"
            android:textSize="15sp"
            android:text="-"/>

        <TextView
            android:id="@+id/tv_mvReleaseDate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mvTitle"
            android:layout_toRightOf="@id/tv_strip"
            android:textColor="@color/grey"
            android:textSize="15sp"/>
<!--            android:text="2023-05-17"/>-->

        <TextView
            android:id="@+id/tv_owTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mvLanguage"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Overview" />

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_owTitle"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:textSize="15sp"
            android:textColor="@color/grey"/>
    </RelativeLayout>

</ScrollView>